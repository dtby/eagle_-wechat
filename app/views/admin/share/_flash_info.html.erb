<% flash.each do |name, msg| -%>
<script data-no-turblink>
$(function() {
		setTimeout(function() {
			toastr.options = {
				closeButton: true,
				progressBar: true,
				showMethod: 'slideDown',
				timeOut: 4000
			};
			toastr.success('<%= msg %>', '<%= name %>');
		}, 1300);
	})
</script>
<% end -%>
