<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>客户详细信息</h5>
            <%= link_to new_admin_customer_path, remote: true, format: :js, class: "ibox-title-new member-new" do %>
              <i class="fa fa-plus fa-lg"></i>
            <% end %>
        </div>
        <div class="ibox-content">
          <table class="footable table table-stripped text-center toggle-arrow-tiny" data-page-size="2">
            <thead>
              <tr>
                <th class="text-center" data-toggle="true">No.</th>
                <th class="text-center">客户名称</th>
                <th class="text-center">地址</th>
                <th class="text-center">标识</th>
                <th class="text-center">说明</th>
                <th class="text-center">操作</th>
              </tr>
            </thead>
            <tbody data-no-turbolink>
            <% @customers.each_with_index do |customer, index| %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= customer.name %></td>
                <td><%= customer.addr %></td>
                <td><%= customer.identifier %></td>
                <td><%= customer.explain %></td>
                <td>
                  <%= link_to edit_admin_customer_path(customer), class: 'btn btn-xs btn-default', remote: true, format: :js do %>
                    <span class="glyphicon glyphicon-edit"></span>
                  <% end %>
                  <%= link_to admin_customer_path(customer), method: :delete, class: 'btn btn-xs btn-danger' do %>
                    <span class="glyphicon glyphicon-trash"></span>
                  <% end %>
                </td>
              </tr>
            <% end %>
            </tbody>
            <tfoot>
              <tr>
                <td class="text-center" colspan="6">
                  <ul class="pagination"></ul>
                </td>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<div id="customerModalContent"></div>
