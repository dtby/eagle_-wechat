<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="row">
      <div class="col-sm-12">
        <h3>CPU</h3>
      </div>
      <hr/>
      <div class="col-sm-12 col-xs-offset-1">
        型号: <%= @machine.machine_detail.try(:cpu_name) %>
      </div>
      <div class="row">
        <div class="col-sm-2 col-xs-offset-1">
          cpu数: <%= @machine.machine_detail.try(:cpu_real) %>
        </div>
        <div class="col-sm-2">
          核数:<%= @machine.machine_detail.try(:cpu_total) %>
        </div>
        <div class="col-sm-2">
          频率:<%= @machine.machine_detail.try(:mhz) %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <h3>Memory</h3>
      </div>
      <hr/>
      <div class="row">
        <div class="col-sm-2 col-xs-offset-1">
          内存:<%= @machine.machine_detail.try(:memory_total) %>
        </div>
        <div class="col-sm-2">
          虚拟内存: <%= @machine.machine_detail.try(:memory_swap_total) %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <h3>Network</h3>
      </div>
      <hr/>
      <div class="row">
        <div class="col-sm-2 col-xs-offset-1">
          内网地址: <%= @machine.machine_detail.try(:network_address) %>
        </div>
        <div class="col-sm-2">
          外网地址: <%= @machine.machine_detail.try(:network_external_address) %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= link_to 'Back', admin_customer_machines_path(@machine.customer_id) %>
