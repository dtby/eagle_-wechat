<div id="machineModal" class="modal fade rooms-modal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h3 class="modal-title"><span class="text-primary"><%= machine.name %></span><small>数据设置</small></h3>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-lg-12">
            <%= form_for [:admin, machine.customer, machine], remote: true, format: :js do |f| %>
            <%= f.hidden_field :customer_id, :value => machine.customer_id %>
            <div class="form-group">
              <div class="input-group input-padding" style="width: 100%;">
                <%= f.text_field :name, class: 'form-control', placeholder: '服务器名称'%>
              </div>
              <% if machine.errors[:name].any? %>
                <dd class="error text-danger"><%= machine.errors[:name][0] %></dd>
              <% end %>
            </div>
            <div class="form-group">
              <div class="input-group input-padding" style="width: 100%;">
                <%= f.text_field :identifier, class: 'form-control', disabled: 'disabled', placeholder: '服务器标识符'%>
              </div>
              <% if machine.errors[:identifier].any? %>
                <dd class="error text-danger"><%= machine.errors[:identifier][0] %></dd>
              <% end %>
            </div>
            <div class="form-group">
              <div class="input-group input-padding" style="width: 100%;">
                <%= f.text_field :explain, class: 'form-control', placeholder: '服务器说明'%>
              </div>
              <% if machine.errors[:explain].any? %>
                <dd class="error text-danger"><%= machine.errors[:explain][0] %></dd>
              <% end %>
            </div>
            <div class="text-center"><button class="btn sub-btn btn-primary" type="submit"><strong>提交</strong></button></div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  var CKboxDisable;
  CKboxDisable = Array.prototype.slice.call(document.querySelectorAll(".js-switch-modal"));
  CKboxDisable.forEach(function(html) {
    return new Switchery(html, {
      color: "#1AB394",
      size: 'small'
    });
  });

  //配置多选表单
  var config = {
    '.chosen-select'           : {},
    '.chosen-select-deselect'  : {allow_single_deselect:true},
    '.chosen-select-no-single' : {disable_search_threshold:10},
    '.chosen-select-no-results': {no_results_text:'Oops, nothing found!'},
    '.chosen-select-width'     : {width:"90%"}
  }
  for (var selector in config) {
    $(selector).chosen(config[selector]);
  }
</script>

