<% content_for :title do %>
	调用接口
<% end %>
<div class="warp">
	<div class="sef-container">
		<div class="tab-title col-xs-12 text-center">
			<div class="col-xs-4">接口名称</div>
			<!-- <div class="col-xs-3">接口说明</div> -->
			<div class="col-xs-4">时延</div>
			<div class="col-xs-4">状态</div>
		</div>
		<div class="tab-line text-center clearfix">
		<% @interfaces.each_with_index do |interface, index| %>
			<div class="col-xs-12 active-line">
				<div class="col-xs-4"><%=  interface.try(:name) %></div>
				<!-- <div class="col-xs-3">接口说明</div> -->
				<% time_cost = delay(1).to_i %>
				<div class="col-xs-4"><%= time_cost %>ms</div>
				<div class="col-xs-4">
				<% if time_cost < 190 %>
					<i class="fa fa-circle fa-green"></i>正常
				<% else %>
					<i class="fa fa-circle fa-red"></i>故障
				<% end %>
				</div>
			</div>
			<hr class="line-hr">
		<% end %>
		</div>
	</div>
</div>