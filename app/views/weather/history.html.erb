<div class="warp">
	<div class="sef-container">
		<div class="tab-title col-xs-12 text-center">
			<div class="col-xs-3">标题</div>
			<div class="col-xs-3">模块</div>
			<div class="col-xs-3">级别</div>
			<div class="col-xs-3">时间</div>
		</div>
		<div class="tab-line text-center clearfix">
		<% if @tasks.present? %>
			<% @tasks.each_with_index do |task, index| %>
				<div class="col-xs-12 active-line">
					<div class="col-xs-3"><%= task.name %></div>
					<div class="col-xs-3">气象数据</div>
					<div class="col-xs-3"><%= task_status task %></div>
					<div class="col-xs-3"><%= task.updated_at.strftime("%Y-%m-%d")%></div>
					<div class="col-xs-12">
						<div class="col-xs-9 small-tab text-left"><%= truncate("描述信息", length: 20) %></div>
						<div class="col-xs-3"><%= task.updated_at.strftime("%H:%M:%S")  %></div>
					</div>
				</div>
				<hr class="line-hr">
			<% end %>
		<% end %>
		</div>
	</div>
</div>