<% content_for :title do %>
	历史告警记录
<% end %>
<div class="warp">
	<div class="sef-container">
		<div class="tab-title col-xs-12 text-center">
			<div class="col-xs-4">标题</div>
			<div class="col-xs-4">模块</div>
			<!-- <div class="col-xs-3">级别</div> -->
			<div class="col-xs-4">采集时间</div>
		</div>
		<div class="tab-line text-center clearfix">
			<% if @tasks.present? %>
				<% @tasks.each_with_index do |task, index| %>
	 				<div class="col-xs-12 active-line">
						<div class="col-xs-4"><%= task.name %></div>
						<div class="col-xs-4">气象数据</div>
						<!-- <div class="col-xs-3"><%= task_status task %></div> -->
						<div class="col-xs-4"><%= "#{task.rate.to_s}min" %></div>
						<div class="col-xs-12">
							<div class="col-xs-6 small-tab text-left">
								<i class="fa fa-circle fa-red"></i>
								<%= task.updated_at.strftime("%y-%m-%d %H:%M") %>
							</div>
							<div class="col-xs-6 small-tab text-left">
								<% if task.relieve_task.present? %>
									<i class="fa fa-circle fa-green"></i>
									<%= task.relieve_task.updated_at.strftime("%y-%m-%d %H:%M") %>
								<% end %>
							</div>
						</div>
					</div>
					<hr class="line-hr">
				<% end %>
		  <% else %>
		    <div class="col-xs-12">
					<h4>暂无历史告警</h4>
				</div>
			<% end %>
		</div>
	</div>
</div>