<% content_for :title do %>
	活跃告警记录
<% end %>
<div class="warp">
	<div class="sef-container">
		<div class="tab-title col-xs-12 text-center">
			<div class="col-xs-4">标题</div>
			<div class="col-xs-4">模块</div>
			<!-- <div class="col-xs-3">级别</div> -->
			<div class="col-xs-4">告警时间</div>
		</div>
		<div class="tab-line text-center clearfix">
			<% if @tasks.present? %>
				<% @tasks.each_with_index do |task, index| %>
	 				<div class="col-xs-12 active-line">
						<div class="col-xs-4"><%= task.name %></div>
						<div class="col-xs-4">气象数据</div>
						<!-- <div class="col-xs-3"><%= task_status task %></div> -->
						<div class="col-xs-4"><%= task.updated_at.strftime("%Y-%m-%d")%></div>
						<div class="col-xs-12">
							<div class="col-xs-8 small-tab text-left" style="padding-left: 30px;"><%= task.task_dec %></div>
							<div class="col-xs-4"><%= task.updated_at.strftime("%H:%M:%S")  %></div>
						</div>
					</div>
					<hr class="line-hr">
				<% end %>
		  <% else %>
		    <div class="col-xs-12">
					<h4>暂无活跃告警</h4>
				</div>
			<% end %>
		</div>
	</div>
</div>