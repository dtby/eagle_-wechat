<script type="text/javascript">
  var right2 = $(".right2").height();
  // 路径配置
  require.config({
    paths: {
      echarts: '/assets/echarts'
    }
  });
  
  // 使用
  require(
    [
    'echarts',
    'echarts/chart/pie' // 使用柱状图就加载bar模块，按需加载
    ],
    function (ec) {
      $(".server-air").each(function(){
        var myChart = ec.init($(this).get(0));
        var labelTop = {
            normal : {
                label : {
                    show : true,
                    position : 'center',
                    formatter : '{b}',
                    textStyle: {
                        baseline : 'bottom'
                    }
                },
                labelLine : {
                    show : false
                }
            }
        };
        var labelFromatter = {
            normal : {
                label : {
                    formatter : function (params){
                        return 100 - params.value + '%'
                    },
                    textStyle: {
                        baseline : 'top'
                    }
                }
            },
        }
        var labelBottom = {
            normal : {
                color: '#ccc',
                label : {
                    show : true,
                    position : 'center'
                },
                labelLine : {
                    show : false
                }
            },
            emphasis: {
                color: 'rgba(0,0,0,0)'
            }
        };
        var radius = [40, 55];
        option = {
            legend: {
              show: false,
                x : 'center',
                y : 'center',
                data:[
                'CPU', '内存'
                ]
            },
            series : [
                {
                    type : 'pie',
                    center : ['25%', '50%'],
                    radius : radius,
                    y: '55%',   // for funnel
                    x:'60%', // for funnel
                    itemStyle : labelFromatter,
                    data : [
                        {name:'other', value:83, itemStyle : labelBottom},
                        {name:'CPU', value:17,itemStyle : labelTop}
                    ]
                },
                {
                    type : 'pie',
                    center : ['75%', '50%'],
                    radius : radius,
                    y: '55%',   // for funnel
                    x:'80%', // for funnel
                    itemStyle : labelFromatter,
                    data : [
                        {name:'other', value:29, itemStyle : labelBottom},
                        {name:'内存', value:71,itemStyle : labelTop}
                    ]
                }
            ]
        };
      // 为echarts对象加载数据 
      myChart.setOption(option); 
      });
    }
  );
</script>

