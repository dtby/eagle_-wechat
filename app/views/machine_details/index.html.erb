<div class="warp">
	<div class="sef-container">
		<div class="tab-title col-xs-12 server-tab">
			<div class="col-xs-4 server-xs4">服务器编码</div>
			<div class="col-xs-2">CPU</div>
			<div class="col-xs-2">内存</div>
			<div class="col-xs-2">网络</div>
			<div class="col-xs-2 text-center">时延</div>
		</div>
		<div class="tab-line text-center clearfix">
			<% @machines.each do |machine| %>
				<%= link_to machine_details_path(machine) do %>
				<div class="col-xs-12 server-line active-line">
					<div class="col-xs-4"><%= machine.identifier.try(:truncate, 9) %></div>
					<div class="col-xs-2"><p>
						<i class="fa fa-circle fa-red"></i><%= eval(MachineInfo.get_info("cpu", machine.identifier))["cpu_used"] %>%</p>
						<!-- <p class="server-number">
							<%= machine.machine_detail.cpu_real %>/
							<%= machine.machine_detail.cpu_total %>
						</p> -->
					</div>
					<div class="col-xs-2">
						<p><i class="fa fa-circle fa-green"></i><%= machine.machine_detail.memory_total.delete('kB').to_i >> 20 %>G</p>
						<p class="server-number">
							<%= ((eval(MachineInfo.get_info("memory", machine.identifier))["memory_total_bytes"].to_f - eval(MachineInfo.get_info("memory", machine.identifier))["memory_free_bytes"].to_f) / 1073741824).round(1) %>G/
							<%= (eval(MachineInfo.get_info("memory", machine.identifier))["memory_total_bytes"].to_f / 1073741824).round(1) %>G
						</p>
					</div>
					<div class="col-xs-2"><i class="fa fa-circle fa-green"></i>正常</div>
					<div class="col-xs-2"><i class="fa fa-circle fa-green"></i>20ms</div>
				</div>
				<% end %>
				<hr class="line-hr">
			<% end %>
		</div>
	</div>
</div>
