<% content_for :title do %>
	服务器列表
<% end %>
<div class="warp">
	<div class="sef-container">
		<div class="tab-title col-xs-12 server-tab">
			<div class="col-xs-4 server-xs4">服务器名称</div>
			<div class="col-xs-3">CPU</div>
			<div class="col-xs-2">内存</div>
			<div class="col-xs-2">状态</div>
			<div class="col-xs-1"></div>
		</div>
		<div class="tab-line text-center clearfix">
			<% @machines.each do |machine| %>
				<%= link_to machine_detail_path(machine) do %>
				<div class="col-xs-12 server-line active-line" style="line-height: 40px;">
					<div class="col-xs-4"><%= machine.name.try(:truncate, 9) %></div>
					<div class="col-xs-3">
						<p><i class="fa fa-circle fa-red"></i><%= machine.cpu_percent %></p>
					</div>
					<div class="col-xs-2">
						<p><i class="fa fa-circle fa-green"></i><%= machine.memory_percent %></p>
					</div>
					<div class="col-xs-2">
						<i class="fa fa-circle fa-green"></i>正常
					</div>
					<div class="col-xs-1"><span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span></div>
				</div>
				<% end %>
				<hr class="line-hr">
			<% end %>
		</div>
	</div>
</div>
